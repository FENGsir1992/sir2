# 【更新】环境变量配置示例文件
# 复制此文件为 .env 或 env.local 并根据实际情况修改配置

# 前端环境变量 (VITE_ 前缀)
VITE_API_BASE_URL=http://localhost:3001/api
VITE_BACKEND_ORIGIN=http://localhost:3001
VITE_MEDIA_BASE_URL=http://localhost:3001

# VPN模式配置（避免硬编码）
VITE_VPN_MODE=false
VITE_VPN_HOST=192.168.0.100
VITE_VPN_PORT=3001

# 后端环境变量
NODE_ENV=development
PORT=3001
HOST=localhost

# 数据库配置
DATABASE_URL=./data/database.sqlite

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 微信支付配置
WECHAT_PAY_APPID=your_wechat_appid
WECHAT_PAY_MCHID=your_merchant_id
WECHAT_PAY_SERIAL_NO=your_cert_serial_no
WECHAT_PAY_PRIVATE_KEY_PATH=./certs/wechat/private_key.pem
WECHAT_PAY_APIV3_KEY=your_api_v3_key
WECHAT_PAY_NOTIFY_URL=https://your-domain.com/api/pay/wechat/callback
WECHAT_PAY_PLATFORM_CERT_PATH=./certs/wechat/platform_cert.pem

# 支付宝配置
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY_PATH=./certs/alipay/private_key.pem
ALIPAY_PUBLIC_KEY_PATH=./certs/alipay/public_key.pem
ALIPAY_NOTIFY_URL=https://your-domain.com/api/pay/alipay/notify
ALIPAY_RETURN_URL=https://your-domain.com/payment/alipay/return
ALIPAY_USE_SANDBOX=true
ALIPAY_GATEWAY=https://openapi.alipaydev.com/gateway.do

# Swagger文档配置
SWAGGER_DEV_URL=http://localhost:3001
SWAGGER_PROD_URL=https://api.your-domain.com

# 订单自动关闭配置
ORDER_AUTO_CLOSE_INTERVAL_MS=600000  # 10分钟检查一次
ORDER_AUTO_CLOSE_AGE_MS=1800000      # 30分钟超时

# 前端URL（用于支付回调）
FRONTEND_URL=http://localhost:5173